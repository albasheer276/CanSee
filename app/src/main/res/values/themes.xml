<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CanSee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/primaryTextColor</item>
        <item name="colorSurface">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/secondaryTextColor</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="AppTitleStyle">
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:textSize">@dimen/titleFontSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Head1Style">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/head1FontSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHead1Style">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/subHead1FontSize</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MutedButton">
        <item name="android:backgroundTint">@color/mutedColor</item>
        <item name="android:textColor">@color/mutedTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>